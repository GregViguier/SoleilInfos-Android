<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.grenades.soleilinfos.ui.SettingsFragment">


    <TextView
        android:id="@+id/refreshPeriodTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pref_machine_status_refresh_period"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/large_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Switch
        android:id="@+id/autoRefreshCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/pref_machine_status_auto_refresh"
        app:layout_constraintTop_toBottomOf="@id/refreshPeriodTextView"
        tools:layout_editor_absoluteX="12dp" />

    <EditText
        android:id="@+id/refreshPeriodEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/darker_gray"
        android:inputType="number"
        android:text=""
        app:layout_constraintBaseline_toBaselineOf="@id/refreshPeriodTextView"
        app:layout_constraintLeft_toRightOf="@id/refreshPeriodTextView" />


</android.support.constraint.ConstraintLayout>
